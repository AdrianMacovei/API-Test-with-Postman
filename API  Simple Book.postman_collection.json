		{
			"name": "Get books with filter",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"//test status code\r",
							"pm.test(\"Status code is 200\", () => {\r",
							"    pm.response.to.have.status(200);\r",
							"});\r",
							"\r",
							"// save postman response in json in var const response\r",
							"const response = pm.response.json();\r",
							"\r",
							"// create var list with filter non-fiction and avaible=true\r",
							"const nonFictionBooks = response.filter((book) => book.available === true) \r",
							"\r",
							"//print on console that list of books after filter it\r",
							"console.log(nonFictionBooks[0]);\r",
							"\r",
							"//create a variable to store first object of type book in the list\r",
							"const book = nonFictionBooks[0];\r",
							"\r",
							"// if list is not emty and a object type book will be found make it global variable\r",
							"if (book) {\r",
							"    pm.globals.set(\"bookId\", book.id);\r",
							"}\r",
							"\r",
							"//test book is object, it's property available is true and type is non-fiction\r",
							"pm.test(\"Book found\", () => {\r",
							"    pm.expect(book).to.be.an('object');\r",
							"    // pm.expect(book.available).to.be.true; // same as code bellow\r",
							"    pm.expect(book.available).to.eql(true);\r",
							"    pm.expect(book.type).to.eql(\"non-fiction\")\r",
							"});\r",
							"\r",
							"\r",
							""
						],
						"type": "text/javascript"
					}
				}
			],
